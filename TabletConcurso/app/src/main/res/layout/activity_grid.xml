<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondo">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/pestana_arriba">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imagen_concursantes"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/base_foto" />

            <TextView
                android:id="@+id/txt_nombres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="60dp"
                android:text="Perla y Jesus"
                android:textColor="@color/colorBlanco"
                android:textStyle="bold"
                android:textSize="60dp"
                />
        </LinearLayout>
    </FrameLayout>

    <GridView
        android:id="@+id/idGVCourses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:horizontalSpacing="2dp"
        android:verticalSpacing="4dp"
        android:padding="2dp" >
    </GridView>

    <ImageView
        android:id="@+id/img_zoom"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center">

    </ImageView>

</FrameLayout>